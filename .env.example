
# .env.example - copy to .env and update values

# Django settings
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database - if using Postgres, set a DATABASE_URL, otherwise default sqlite is used
# Example: postgres://user:password@localhost:5432/socialdb
DATABASE_URL=

# Email (optional, used for password reset / notifications)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# Media and static settings (optional override for production)
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# JWT settings (if used by your project)
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256

# Add any additional environment variables your project requires below

